div class="row">
  <div class="col-md-4">
    <%= form_for([@book, @rating]) do |f| %>
      <% if @book.errors.any? %>
        <div class="error_explanation">
          <h2>
            <%= pluralize(@book.errors.count, "error")  %>
            prohibited this review from being saved
          </h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :value %>
        <br/>
        <%= f.select :value, (1..10), {}, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :review %>
        <br/>
        <%= f.text_area :review, :class => 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit 'Leave a review', :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
