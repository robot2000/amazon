<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    
    <div class="col-md-12" style="margin-top: 50px;">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book %></td>
              <td><%= number_to_currency(book.price) %></td>
              <td><%= image_tag(book.image) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>