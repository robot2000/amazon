<div class="container" style="margin-top: 50px;">
  <div class="row">
    <strong>
      <h2>Shop</h2>
    </strong>
    <div class="col-md-9">
      <%= render @books %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <strong>
          SHOP BY CATEGORIES
        </strong>
      </div>
      <% @categories.each do |category| %>
        <div class="row">
          <h4><%= link_to "#{category.title}", category %></h4>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3 paginator">
      paginator
    </div>
  </div>
</div>