<div class="container" style="margin-top: 110px;">
  <div class="row">
    <div class="col-md-9">
      <%= render @books %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <strong>
          SHOP BY CATEGORIES
        </strong>
      </div>
      <% @categories.each do |category| %>
        <div class="row">
          <h4><%= link_to "#{category.title}", category %></h4>
        </div>
      <% end %>
    </div>
  </div>
  <p>
    <h4><%= link_to 'Back', books_path %></h4>
  </p>
</div>
